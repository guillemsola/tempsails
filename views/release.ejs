    <div id="page-wrapper" style="min-height: 241px;">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Release Definition</h1>
            </div>
        </div>
        
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Enter Your Release Definition
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
<form action="/release" method="POST" role="form">
    <legend>New Release Definition</legend>

    <div class="form-group">
        <label for="inputMilestone" class="col-sm-2 control-label">Milestone:</label>
        <input type="text" name="Milestone" id="inputMilestone" class="form-control" value="" required="required" title="The associated Rally Milestone.">
    </div>

    <div class="form-group">
        <label for="inputUrgency" class="col-sm-2 control-label">Urgency:</label>
        <select name="Urgency" id="inputUrgency" class="form-control" required="required">
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High" selected="selected">High</option>
            <option value="Critical">Critical</option>
            <option value="Urgent">Urgent</option>
        </select>
    </div>
    
    <div class="form-group">
        <label for="inputProduct" class="col-sm-2 control-label">Product:</label>
        <input type="text" name="Product" id="inputProduct" class="form-control" value="" required="required" title="Release Product Name.">
    </div>
    
    <div class="form-group">
        <label for="textareaDescription" class="col-sm-2 control-label">Description:</label>
        <textarea name="Description" id="textareaDescription" class="form-control" rows="3" required="required"></textarea>
    </div>

    <!-- TODO COMPONENTS LIST -->
    
    <div class="form-group">
        <label for="textareaPrerequisits" class="col-sm-2 control-label">Prerequisits:</label>
        <textarea name="Prerequisits" id="textareaPrerequisits" class="form-control" rows="3"></textarea>
    </div>
    
    <div class="form-group">
        <label for="textareaKnownBugs" class="col-sm-2 control-label">Known Bugs:</label>
        <textarea name="KnownBugs" id="textareaKnownBugs" class="form-control" rows="3"></textarea>
    </div>
    
    <div class="form-group">
        <label for="inputBA" class="col-sm-2 control-label">BA:</label>
        <input type="email" name="BA" id="inputBA" class="form-control" value="" required="required" title="Who will be the Business Analist.">
    </div>
    
    <div class="form-group">
        <label for="inputDevOp" class="col-sm-2 control-label">DevOp:</label>
        <input type="email" name="DevOp" id="inputDevOp" class="form-control" value="" required="required" title="Who will be in charge of DevOps activities.">
    </div>

    <div class="form-group">
        <label for="inputScrumMaster" class="col-sm-2 control-label">ScrumMaster:</label>
        <input type="email" name="SM" id="inputScrumMaster" class="form-control" value="" required="required" title="The release Scrum Master.">
    </div>
    
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
