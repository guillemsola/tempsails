<div id="page-wrapper" style="min-height: 241px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Release Management Tool</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Releases List</div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-releases">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Urgency</th>
                                <th>Description</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% releases.forEach(function (release) { %>
                            <tr class="odd gradeX">
                                <td><a href="release?id=<%=release.id %>" title="View or edit release <%=release.Product %>"><%=release.Product %></a></td>
                                <td><%=release.Urgency %></td>
                                <td><%=release.Description %></td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <div class="btn-group">
                        <a class="btn btn-primary" href="release" role="button">New Release</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<% block('localScripts', '<script src="js/views/listReleases.js"></script>') %>